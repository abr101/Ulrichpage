<div class="container" style="margin-top: 30px;">
<h3>Categories</h3>
<div><%= form_tag :search_categories, method: :get do %>
  <%= text_field_tag :search, nil, class:"form-control fa fa-search", placeholder:"Search By Category", required: true, :id => "mysearch"%>
<%end%>	
</div>
<div class="row" style="margin: 1px;">
      <div class="col-md-6">
      <div style="background-color: #F3F6FB; font-size: 25px; border-radius: 5px; margin-bottom: 2px; padding-left: 10px; color: red;"></div>
      <% @categories&.each do |cat|%>        
       		<li style="list-style-type: square; color: #fcea46; font-size: 2em;">
        	<%= link_to cat&.name, subcat_sub_categories_path(id: cat.id), :style => "color: white; font-size: 20px;"%></li>
      <%end%>

  </div>
</div>
</div>