<div class="container">
<h2><%= @city&.name%></h2>
  <div class="row" style="margin: 1px; ">
      <div class="col-md-6">
      <div style="background-color: #F3F6FB; font-size: 25px; border-radius: 5px; margin-bottom: 2px; padding-left: 10px; color: red;"></div>
      <% @categories&.each do |cat|%>
       <% if cat.name == 'Love Personals'%>
       <% if current_user.stripe_token.present? %>
       <li style="list-style-type: square; color: white; font-size: 2em;"><%= link_to cat&.name, sub_categories_path(id: cat.id, city_id: @city.id), :style => "color: white; font-size: 20px;"%></li>
       <%else%>
        <li style="list-style-type: square; color: white; font-size: 2em;"><%= link_to cat&.name, new_charge_path(id: cat.id, city_id: @city.id), :style => "color: white; font-size: 20px;"%></li>
        <%end%>
       <%else%>
        <li style="list-style-type: square; color: white; font-size: 2em;"><%= link_to cat&.name, sub_categories_path(id: cat.id, city_id: @city.id), :style => "color: white; font-size: 20px;"%></li>
      <%end%>
      <%end%>
  </div>
</div>