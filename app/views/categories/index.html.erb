<div class="container">
<h2><%= @city&.name%></h2>
  <div class="row" style="margin: 1px;">
  	<h4>Categories</h4>
    <div class="col-md-6">
      <div style="background-color: #F3F6FB; font-size: 25px; border-radius: 5px; margin-bottom: 2px; padding-left: 10px; color: red;"></div>
      <% @categories&.each do |cat|%>
        <li style="list-style-type: square; color: white;"><%= link_to cat&.name, sub_categories_path(id: cat.id, city_id: @city.id), :style => "color: white;"%></li>
      <%end%>
    </div>
  </div>
</div>