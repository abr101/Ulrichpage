<div class="container">
<h2><%= @category&.name%></h2>
  <div class="row" style="margin: 1px;">
  	<h4>Sub-Categories</h4>
    <div class="col-md-6">
      <div style="background-color: #F3F6FB; font-size: 25px; border-radius: 5px; margin-bottom: 2px; padding-left: 10px; color: red;"></div>
      <% @sub_categories&.each do |cat|%>
        <li style="list-style-type: square; color: white;"><%= link_to cat&.name, dashboard_decide_path(cat_id: cat.id, city_id: @city.id, category_id: @category.id), :style => "color: white;"%></li>
      <%end%>
    </div>
  </div>
</div>