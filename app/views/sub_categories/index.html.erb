<div class="container">
<h2><%= @category&.name%></h2>
  <div class="row" style="margin: 1px;">
    <div class="col-md-6">
      <div style="background-color: #F3F6FB; font-size: 25px; border-radius: 5px; margin-bottom: 2px; padding-left: 10px; color: red;"></div>
      <% @sub_categories&.each do |cat|%>
        <li style="list-style-type: square; color: white; font-size: 2em;"><%= link_to cat&.name, published_adz_post_ads_path(cat_id: @cat_id, city_id: @city_id, category_id: @category_id), :style => "color: white; font-size: 20px;"%></li>
      <%end%>
    </div>
  </div>
</div>