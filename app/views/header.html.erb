								<button style="float: right; border: 1px solid white; font-size: 22px; height: 40px; width: auto; border: 3px solid red; border-radius: 5px; background-color: white;"><strong><%= link_to 'POST',new_post_ad_path(cat_id: @sub_category_id, city_id: @city&.id, category_id: @category_id), :class => "posthead", :style => "color: red;" %></strong>
								</button>
								<%else%>
									<button style="float: right; border: 1px solid white; font-size: 22px; height: 40px; border: 3px solid red; width: auto; border-radius: 5px; background-color: white;"><strong><%= link_to 'POST',new_post_ad_path, :class => "posthead", :style => "color: red;" %></strong>
								</button>
								<%end%>

							</div><!-- user-section -->

						</div>

					</div>

				</div>

			</div><!-- topbar -->

	</header><!-- header -->