									      	<%= link_to "Store", dashboard_store_path, :class => "hoverclr", :style => "font-weight: bold; color: white;" %><br>
									      	
									      	<%= link_to "Contest", page_user_informations_path, :class => "hoverclr", :style => "font-weight: bold; color: white;"%>
									      	<span class="fa fa-gift" style="font-size: 15px;"></span>
									       
									      </li>
			     				    <% else %>
									<li > 
										<%= link_to "Home", root_path, :class => "hoverclr", :style => "font-weight: bold;" %>
										<%= link_to "Account", dashboard_login_page_path, :class => "hoverclr", :style => "font-weight: bold;" %>
										<%= link_to "Store", dashboard_store_path, :class => "hoverclr", :style => "font-weight: bold;" %><br>
										<%= link_to "Contest", page_user_informations_path(giveaway: true), :class => "hoverclr", :style => "font-weight: bold; color: white;" %>
