<header id="header" class="clearfix" style="height: 170px;">

			<div class="container topbar" style="padding-top: 30px;">

				<div class="container">

					<div class="row">
						<div class="col-sm-6">
							<a class="navbar-brand" href="<%= root_url%>"><%= image_tag("logo.jpeg", :alt => "Logo", :class => "img-responsive", :style => "border-radius: 3px; width: 150px; margin-top: -10px; margin-left: -20px;") %></a>
						</div>
						<div class="col-sm-2"></div>

						<div class="col-sm-4">

							<div class="user-section" style="float: right;">			

								<h3 class="list-line" >
									<%if current_user.present?%>
											<!--<%= image_tag current_user&.avatar_url, style: 'height:3vw;width:6vw;margin-bottom:10px; border-radius: 10px; float:right;' %>-->
									      <li style="float:right; margin-bottom: 20px;"><%= link_to t('home_btn_header'), root_path, :class => "hoverclr", :style => "font-weight: bold; color: white;" %>
									      	<%= link_to t('signout_btn_header'), dashboard_signout_path, :class => "hoverclr", :style => "font-weight: bold;"%>
									      	<%= link_to t('store_btn_header'), dashboard_store_path, :class => "hoverclr", :style => "font-weight: bold; color: white;" %><br>
									      	
									      	<%= link_to t('contest_btn_header'), page_user_informations_path, :class => "hoverclr", :style => "font-weight: bold; color: white;"%>
									      	<span class="fa fa-gift" style="font-size: 15px;"></span>
									       
									      </li>
			     				    <% else %>
									<li > 
										<%= link_to t('home_btn_header'), root_path, :class => "hoverclr", :style => "font-weight: bold;" %>
										<%= link_to t('account_btn_header'), dashboard_login_page_path, :class => "hoverclr", :style => "font-weight: bold;" %>
										<%= link_to t('store_btn_header'), dashboard_store_path, :class => "hoverclr", :style => "font-weight: bold;" %><br>
										<%= link_to t('contest_btn_header'), page_user_informations_path(giveaway: true), :class => "hoverclr", :style => "font-weight: bold; color: white;" %>
											<span class="fa fa-gift" style="font-size: 15px;"></span>
										

									</li>

									 <%end%>
								</h3>	
								<% if current_user.present? %>
								<button style="float: right; border: 1px solid white; font-size: 17px; height: 40px; width: auto; border: 3px solid red; border-radius: 5px; background-color: white;"><strong><%= link_to t('post_btn_header'),new_post_ad_path(cat_id: @sub_category_id, city_id: @city&.id, category_id: @category_id), :class => "posthead", :style => "color: red;" %></strong>
								</button>
								<%else%>
									<button style="float: right; border: 1px solid white; font-size: 17px; height: 40px; border: 3px solid red; width: auto; border-radius: 5px; background-color: white;"><strong><%= link_to t('post_btn_header'),new_post_ad_path, :class => "posthead", :style => "color: red;" %></strong>
								</button>
								<%end%>

							</div><!-- user-section -->

						</div>

					</div>

				</div>

			</div><!-- topbar -->
	</header><!-- header -->
<div class="lang container">
		<button class="lang_btn">Select Language</button>
	
<div class="container hidden_lang">
	<button class="hidden_lang_btn"><div id="google_translate_element" class="g_translate" style="height: 36px; width: 2.2in; "><img src="/assets/globe.jpeg" style="width: 40px; padding-top: 5px; border-radius: 10px; float: right;"></div></button>

		<script type="text/javascript">
		function googleTranslateElementInit() {
		  new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
		}
		</script>
		<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

</div>
</div>