
<h1>Reports</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Post ad</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user.email %></td>
        <td><%= report.post_ad.title %></td>
        <td><%= report.status %></td>
        <td><%= link_to 'View Ad', post_ad_path(id: report.post_ad.id) %></td>
        <td><%= link_to 'Delete Ad As Admin', post_ad_path(id: report.post_ad.id), method: :delete, data: { confirm: 'Are you sure? The Ad will be removed from the system or from location' } %></td>
        <td><%= link_to 'Ignore Report', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>