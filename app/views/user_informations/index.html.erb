<center>
  <div class="container">
    <h2>Please Fill Your Information!</h2>

    <%= form_for UserInformation.new do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <label style="float: left;">Name:</label>
       <%= f.text_field :name, required: true, class: "form-control" %>
       <label style="float: left;">Email:</label>
       <%= f.email_field :email, required: true, value: current_user.email, class: "form-control" %>
       <label style="float: left;">Address:</label>
       <%= f.text_field :address, required: true, class: "form-control" %>
       <label style="float: left;">Zipcode:</label>
       <%= f.text_field :zipcode, required: true, class: "form-control" %>
       <label style="float: left;">Phone:</label>
       <%= f.text_field :phone, required: true, class: "form-control" %>
       <%= f.submit "Submit", style: "margin-top: 20px;" %>
    <%end %>
  
  </div>
</center>