<center>
  <div class="container">
    <h2><%= t('user_info_page')%></h2>

    <%= form_for UserInformation.new do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <label style="float: left;"><%= t('user_info_name')%></label>
       <%= f.text_field :name, required: true, class: "form-control" %>
       <label style="float: left;"><%= t('user_info_email')%></label>
       <%= f.email_field :email, required: true, value: current_user.email, class: "form-control" %>
       <label style="float: left;"><%= t('user_info_ad')%></label>
       <%= f.text_field :address, required: true, class: "form-control" %>
       <label style="float: left;"><%= t('user_info_zip')%></label>
       <%= f.text_field :zipcode, required: true, class: "form-control" %>
       <label style="float: left;"></label>
       <%= f.text_field :phone, required: true, class: "form-control" %>
       <%= f.submit t('user_info_submit'), style: "margin-top: 20px;" %>
    <%end %>
  
  </div>
</center>