<div class="page">
		<div class="ad-post-wrapper section">
			<div class="container">
				<div class="row loginform" >
					<div class="col-md-4 col-md-offset-4 logindiv" >
						<div class="user-form" style="text-align: center; font-size: 40px; background-color: black;">
							<form >
							    <div class="form-group">
							    	<%= image_tag("new111.png", :alt => "Logo", :style => "width: 150px;") %>
							    </div>
							    <div class="form-group">
							    	 <strong><h4 style="color: yellow;"><%= t('sign_in')%></h4></strong>
							    </div>
							    <% if @giveaway %>
							    	<a class = "loginimg" href="<%= user_google_oauth2_omniauth_authorize_path(giveaway: @giveaway) %>">
							    		<%= image_tag("gmaillogin.png", :alt => "Gmail", :style => "border-radius: 3px; width: 200px; height: 50px;") %>
							    	</a>
							    <% else %>
							    	<a class = "loginimg" href="<%= user_google_oauth2_omniauth_authorize_path(reply: @reply, id: @id) %>">
							    		<%= image_tag("gmaillogin.png", :alt => "Gmail", :style => "border-radius: 3px; width: 200px; height: 50px;") %>
							    	</a>
							    <% end %>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div> <!-- ad-post -->
	</div>	<!-- page -->