
<h1>Replies</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Text</th>
      <th>Name</th>
      <th>Post ad title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.order("created_at DESC").each do |reply| %>
      <tr>
        <td><%= reply.user.email %></td>
        <td><%= reply.text %></td>
        <td><%= reply.user.full_name %></td>

        <td><%= reply.post_ad.title %></td>
        <td><%= link_to 'Edit', edit_reply_path(reply) %></td>
        <td><%= link_to 'Destroy', reply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reply', new_reply_path(id: @post_ad.id), class:"btn btn-primary" %>
