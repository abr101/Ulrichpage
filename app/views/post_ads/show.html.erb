
<div class ="container addpage">
  <%if current_user.present?%>
     <%= link_to "Manage Ads", post_ads_path, :style => "font-weight: bold; color: black; float: right;", :class=>"homeshow" %>
  <%end%>
</div>
<div class="container" style="margin-top: 30px; background-color: white; width: 95%;">
  <%= link_to t('postad_show_reply_btn'), new_reply_path(id: @post_ad.id, reply: true), class:"btn", style:"background-color: #f1de30; color: black;" %><!-- replies -->
  <%= link_to t('postad_show_report_btn'), recapcha_submit_reports_path(id: @post_ad.id, user_id: current_user&.id), class:"btn", style:"background-color: red; color: black;" %>
    <p>
      <h5 style="color: black;" class="spcerm"><strong><%= t('postad_show_title')%> <%= @post_ad.title %></strong></h5>
    </p>
    <p>
      <h5 style="color: black;" class="spcerm"><strong><%= t('postad_show_price')%> <%= @post_ad.price %></strong></h5>
    </p>
    <h4 style="color: red; text-decoration: underline;"><strong><%= t('postad_show_overview')%></strong></h4>
<div class="container" style="color: black;">
  <p class="spcerm">
    <strong><%= t('postad_show_post_id')%></strong>
    <span><%= @post_ad.id %></span>
  </p>
  <p class="spcerm">
    <strong><%= t('postad_show_zip')%></strong>
    <span><%= @post_ad.zipcode %></span>
  </p>

  <p class="spcerm"> 
    <strong><%= t('postad_show_phone')%></strong>
    <span><%= @post_ad.phone %></span>
  </p>

  <p class="spcerm">
    <strong><%= t('postad_show_post_in')%></strong>
    <span><%= @post_ad.location %></span>
  </p>


 <!--  <p class="spcerm">
    <strong>Keywords:</strong>
    <span><%= @post_ad.keywords %></span>
  </p> -->
  <!-- 
  <p>
    <strong>Nego:</strong>
    <%= @post_ad.negotiable %>
  </p> -->

  <p class="spcerm1" style="margin-top: -5px;">
    <strong><%= t('postad_show_title')%></strong>
    <span><%= @post_ad.email %></span>
  </p>
  <p class="spcerm1" style="margin-top: -9px;">
    <strong><%= t('postad_show_title')%></strong>
    <span><%= @post_ad.city.name %>, <%= @post_ad.category.name%>, <%= @post_ad.sub_category.name%></span>
  </p>

</div>
<h4 style="color: red; text-decoration: underline; margin-top: -6px;"><strong><%= t('postad_show_desc')%></strong></h4>
      <div class="container" style="color: black; padding-bottom: 50px;">
        <p ><%= @post_ad.description.html_safe %></p>
      </div>

    <div class="container">
      <% @post_ad.avatars.each do |avatar|%>
      <%= image_tag avatar.url, style: 'width: 74%; margin-bottom:10px; border-radius: 10px; float:left;' %>
      <%end%>
    </div>
    <h4 style="float: left; color: red; text-decoration: underline; margin-top: -6px;"><strong><%= t('postad_show_video')%></strong></h4><br>
    <div class="container">
      <% if @post_ad&.clip_blob.present? %>
      <%= video_tag(url_for(@post_ad&.clip), style: 'width: 74%; margin-bottom:10px; border-radius: 10px; margin-left: -40px;', controls: "") %>
      <%end%>
    </div>
