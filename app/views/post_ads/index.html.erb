<div class="container" style="color: white;">
<p id="notice"><%= notice %></p>

<h1><%= t('post_heading_postads')%></h1>

<table class="table table-bordered" >
  <thead>
    <tr>
      <th><%= t('title_postads')%></th>
      <th><%= t('status_postads')%></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_ads.each do |post_ad| %>
    
      <tr>
        <td><%= post_ad.title %></td>
        <% if post_ad.stopped? %>
          <td style="color: red;"><%= post_ad.status%></td>
        <%else%>
          <td style="color: green;"><%= post_ad.status%></td>
      <% end %>
        <td><%= link_to t('view_all_reply'), replies_path(id: post_ad.id) %></td>
        <td><%= link_to t('show_postads'), post_ad %></td>
        <td><%= link_to t('edit_postads'), edit_post_ad_path(post_ad) %></td>
        <td><%= link_to t('destroy_postads'), post_ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
