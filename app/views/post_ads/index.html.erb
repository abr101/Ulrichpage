<div class="container" style="color: white;">
<p id="notice"><%= notice %></p>

<h1>Post Ads</h1>

<table class="table table-bordered" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_ads.each do |post_ad| %>
      <tr>
        <td><%= post_ad.title %></td>
        <td><%= post_ad.location %></td>
        <td><%= post_ad.phone %></td>
        <td><%= post_ad.email %></td>
        <td><%= post_ad.description.html_safe %></td>

        <% (Array post_ad.avatars).each do |image| %>
        <% if image.url.present? %>
          <td><%= image_tag(image&.url, height: 50) %></td>
        <%end%>
      <% end %>
        <td><%= link_to 'Show', post_ad %></td>
        <td><%= link_to 'Edit', edit_post_ad_path(post_ad) %></td>
        <td><%= link_to 'Destroy', post_ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
